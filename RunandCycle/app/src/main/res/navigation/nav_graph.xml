<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.runandcycle.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.runandcycle.ui.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/navigation_home"
            />
    </fragment>
    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.runandcycle.ui.login.home"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_record"
            app:destination="@id/navigation_record" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.runandcycle.profile"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_navigation_profile_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_record"
        android:name="com.example.runandcycle.record"
        android:label="@string/record"
        android:layout="@layout/fragment_record">

        <action
            android:id="@+id/action_navigation_record_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>



    </navigation>


